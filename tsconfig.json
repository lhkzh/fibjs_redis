{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "sourceMap": false,
    "strict": false,
    "alwaysStrict": true,
    "watch":false,
    "outDir": "lib/",
    "experimentalDecorators":true,
    "emitDecoratorMetadata":true,
    "declaration": true,
    "declarationDir": "@types",
    "removeComments": false
  },
  "exclude": [
    "dist",
    "node_modules",
    "@types"
  ]
}